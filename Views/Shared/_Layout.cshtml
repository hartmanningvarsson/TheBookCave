<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TheBookCave</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body>
    
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a class="nav-logo" asp-area="" asp-controller="Book" asp-action="Index" class="navbar-brand"><i class="glyphicon glyphicon-book"></i>TheBookCave</a>            
            </div>
            <div class="navbar-user">
                <a asp-area="" asp-controller="User" asp-action="UserLogin">Signup / Signin</a></li>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a asp-area="" asp-controller="Book" asp-action="ListOfBooks">List of Books</a></li>
                    <li><a asp-area="" asp-controller="Book" asp-action="TopTenBooks">Top Ten Books</a></li>
                    <li><a asp-area="" asp-controller="Book" asp-action="NewBooks">NewBooks</a></li>
                    <li><a asp-area="" asp-controller="Book" asp-action="AboutUs">About us</a></li>
                </ul>
            </div>
         
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
       <!--Footer-->
<footer class="page-footer font-small blue pt-4 mt-4">
    <!--Footer Links-->
    <div class="container-fluid text-center text-md-left">
        <div class="row">
            <!--First column-->
            <div class="col-md-6">
                <i class="glyphicon glyphicon-envelope"></i> 
                <span>Lets talk!</span>
                </br>
                <a class="contact-us"asp-area="" asp-controller="Book" asp-action="ContactUs">Contact us</a>   
            </div>
            <!--/.First column-->
            <div class="col-md-6">
                <i class="glyphicon glyphicon-user"></i>
                <span>Who are we?</span>
                </br>
                <a class="about-us"asp-area="" asp-controller="Book" asp-action="AboutUs">About us</a>   
            </div>
            <!--/.Second column-->
        </footer>
            </div>
          

        </div>
    </div>

    <!--Copyright-->
    <div class="footer-copyright py-3 text-center">
        © 2018 TheBookCave:        
    </div>
    <!--/.Copyright-->
</footer>
<!--/.Footer-->
    </div>

    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-K+ctZQ+LL8q6tP7I94W+qzQsfRV2a+AfHIi9k8z8l9ggpc8X+Ytst4yBo/hH+8Fk">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
